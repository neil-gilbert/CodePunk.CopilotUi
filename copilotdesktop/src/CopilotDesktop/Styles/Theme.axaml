<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Styles.Resources>
    <!-- GitHub Copilot Dark Theme -->
    <SolidColorBrush x:Key="BrandBrush" Color="#0D7CFF" />
    <SolidColorBrush x:Key="BrandHoverBrush" Color="#1F8AFF" />
    <SolidColorBrush x:Key="BackgroundBrush" Color="#0D1117" />
    <SolidColorBrush x:Key="SurfaceBrush" Color="#161B22" />
    <SolidColorBrush x:Key="PanelBrush" Color="#1C2128" />
    <SolidColorBrush x:Key="BorderBrushLow" Color="#30363D" />
    <SolidColorBrush x:Key="TextBrush" Color="#E6EDF3" />
    <SolidColorBrush x:Key="TextMutedBrush" Color="#7D8590" />
    <SolidColorBrush x:Key="UserBubbleBrush" Color="#1F6FEB" />
    <SolidColorBrush x:Key="AssistantBubbleBrush" Color="#21262D" />

    <CornerRadius x:Key="ControlCornerRadius">8</CornerRadius>
  </Styles.Resources>

  <!-- Window background default -->
  <Style Selector="Window">
    <Setter Property="Background" Value="{DynamicResource BackgroundBrush}" />
  </Style>

  <!-- Buttons (filled) -->
  <Style Selector="Button">
    <Setter Property="Background" Value="{DynamicResource BrandBrush}" />
    <Setter Property="Foreground" Value="White" />
    <Setter Property="BorderBrush" Value="Transparent" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Padding" Value="12,8" />
    <Setter Property="CornerRadius" Value="{DynamicResource ControlCornerRadius}" />
    <Setter Property="Cursor" Value="Hand" />
  </Style>
  
  <Style Selector="Button:pointerover">
    <Setter Property="Background" Value="{DynamicResource BrandHoverBrush}" />
  </Style>
  
  <Style Selector="Button:disabled">
    <Setter Property="Opacity" Value="0.5" />
  </Style>

  <!-- Icon buttons -->
  <Style Selector="Button.icon">
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="BorderBrush" Value="{DynamicResource BorderBrushLow}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="Foreground" Value="{DynamicResource TextMutedBrush}" />
    <Setter Property="Padding" Value="10" />
    <Setter Property="CornerRadius" Value="{DynamicResource ControlCornerRadius}" />
    <Setter Property="Width" Value="36" />
    <Setter Property="Height" Value="36" />
  </Style>
  
  <Style Selector="Button.icon:pointerover">
    <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
    <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
  </Style>

  <!-- Text inputs -->
  <Style Selector="TextBox">
    <Setter Property="Background" Value="{DynamicResource SurfaceBrush}" />
    <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
    <Setter Property="BorderBrush" Value="{DynamicResource BorderBrushLow}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CaretBrush" Value="{DynamicResource BrandBrush}" />
    <Setter Property="CornerRadius" Value="{DynamicResource ControlCornerRadius}" />
    <Setter Property="Padding" Value="12" />
  </Style>
  
  <Style Selector="TextBox:focus">
    <Setter Property="BorderBrush" Value="{DynamicResource BrandBrush}" />
  </Style>

  <!-- Panel helper class -->
  <Style Selector="Border.panel">
    <Setter Property="Background" Value="{DynamicResource PanelBrush}" />
    <Setter Property="BorderBrush" Value="{DynamicResource BorderBrushLow}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="{DynamicResource ControlCornerRadius}" />
  </Style>

  <!-- Message bubbles -->
  <Style Selector="Border.user-message">
    <Setter Property="Background" Value="{DynamicResource UserBubbleBrush}" />
    <Setter Property="CornerRadius" Value="12" />
    <Setter Property="Padding" Value="12,10" />
  </Style>
  
  <Style Selector="Border.assistant-message">
    <Setter Property="Background" Value="{DynamicResource AssistantBubbleBrush}" />
    <Setter Property="BorderBrush" Value="{DynamicResource BorderBrushLow}" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="12" />
    <Setter Property="Padding" Value="12,10" />
  </Style>

  <!-- Text colors -->
  <Style Selector="TextBlock.muted">
    <Setter Property="Foreground" Value="{DynamicResource TextMutedBrush}" />
  </Style>
  
  <!-- ScrollViewer styling -->
  <Style Selector="ScrollViewer">
    <Setter Property="Background" Value="Transparent" />
  </Style>
  
  <!-- ScrollBar styling for dark theme -->
  <Style Selector="ScrollBar">
    <Setter Property="Background" Value="Transparent" />
  </Style>
  
  <Style Selector="ScrollBar:vertical /template/ Thumb">
    <Setter Property="Background" Value="{DynamicResource BorderBrushLow}" />
  </Style>
  
  <Style Selector="ScrollBar:vertical /template/ Thumb:pointerover">
    <Setter Property="Background" Value="{DynamicResource TextMutedBrush}" />
  </Style>

  <!-- ToggleSwitch for mode -->
  <Style Selector="ToggleSwitch">
    <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
  </Style>
</Styles>
