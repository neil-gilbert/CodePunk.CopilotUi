{
  "name": "copilot-ui-wrapper",
  "version": "0.1.0",
  "description": "Electron UI wrapper for GitHub Copilot CLI",
  "main": "dist-electron/main/main.js",
  "type": "module",
  "scripts": {
    "dev": "npm run rebuild:electron && electron-vite dev",
    "build": "npm run typecheck && electron-vite build",
    "typecheck": "tsc --noEmit -p tsconfig.json && tsc --noEmit -p tsconfig.node.json",
    "preview": "electron-vite preview",
    "test": "npm run rebuild:node && vitest run",
    "test:watch": "vitest",
    "test:e2e": "npm run build && playwright test",
    "dist": "npm run rebuild:electron && npm run build && electron-builder",
    "rebuild:electron": "electron-builder install-app-deps",
    "rebuild:node": "npm rebuild better-sqlite3"
  },
  "dependencies": {
    "@github/copilot-sdk": "^0.1.22",
    "better-sqlite3": "^11.10.0",
    "lucide-react": "^0.563.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^10.1.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.51.1",
    "@testing-library/react": "^16.3.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.15.21",
    "@types/react": "^18.3.20",
    "@types/react-dom": "^18.3.6",
    "@vitejs/plugin-react": "^4.4.1",
    "electron": "^35.0.1",
    "electron-builder": "^26.0.12",
    "electron-vite": "^3.1.0",
    "jsdom": "^26.1.0",
    "typescript": "^5.8.3",
    "vite": "^5.4.18",
    "vitest": "^3.1.3"
  },
  "build": {
    "appId": "com.neilgilbert.copilotui",
    "asarUnpack": [
      "node_modules/@github/copilot-*/**/*",
      "node_modules/@github/copilot/**/*"
    ],
    "files": [
      "dist-electron/**/*",
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
